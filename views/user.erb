<div class="hm-container">
      <div class="welcomeHome">

    <h2>Welcome to <%= @user.fname %>'s Page!</h2>
    <h2>Welcome to the Blog</h2>
    <form class="" action="/users" method="post">
    <input type="text" name="title" >
    <textarea name="blog" rows="8" cols="80"></textarea>
    <input type='submit' name="" value="submit">

    </form>

    <% @posts.each do |post| %>
        <h3><%= post.title %></h3>
        <p>
            <%= post.content %>
        </p>
    <% end %>


  </div>
</div>
